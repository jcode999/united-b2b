{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "app/routes/app._index_demo.jsx", "app/routes/tobaccoform.jsx", "app/entry.server.tsx", "app/components/DetailsCard.tsx", "app/components/ApprovedCustomer.tsx", "app/components/Test.jsx", "app/routes/app.product_recomendation.jsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "types": ["node"]
  }
}
