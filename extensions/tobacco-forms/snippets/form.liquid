<!-- blocks/custom-registration-form.liquid -->
{{ "custom-form.css" | asset_url | stylesheet_tag}}
<link
	href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
	rel='stylesheet'
	integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
	crossorigin='anonymous'
>
{% comment %} {% endcomment %}

<div id='custom-form-container'></div>
<div class='custom-form-container-wrapper'>
	<div class='form-container'>
		<form
			id='customForm'
			method='post'
			enctype='multipart/form-data'
			style='font-size: 12px;'
		>
			<div style='margin-top: 2em;'>
				<h3 style="font-family: 'DM Sans', sans-serif; letter-spacing: -.02em; margin: 0 0 2.4rem;">
					Personal Details
				</h3>
				<div class='row'>
					<div class='col'>
						<label for='firstName'>First Name</label>
						<input
							id='firstName'
							name='firstName'
							type='text'
							class='form-control'
							placeholder='First name'
							required
						>
					</div>
					<div class='col'>
						<label for='lastName'>Last Name</label>
						<input
							id='lastName'
							name='lastName'
							type='text'
							class='form-control'
							placeholder='Last name'
							required
						>
					</div>
				</div>
				<div class='form-row'>
					<div class='form-group col-md-6'>
						<label for='email'>Email</label>
						<input
							type='email'
							class='form-control'
							id='email'
							name='email'
							placeholder='Email'
							required
						>
					</div>
					<div class='form-group col-md-6'>
						<label for='phoneNumber'>Phone Number</label>
						<input
							type='phone'
							class='form-control'
							id='phoneNumber'
							name='phoneNumber'
							placeholder='(888)-123-1231'
							required
						>
					</div>
				</div>
			</div>
			{% comment %}----Business Details----- {% endcomment %}
			<div style='margin-top: 2em;'>
				<h3 style="font-family: 'DM Sans', sans-serif; letter-spacing: -.02em; margin: 0 0 2.4rem;">
					Business Details
				</h3>
				<div class='form-group col-md-6'>
					<label for='businessName'>Business Name</label>
					<input
						type='text'
						class='form-control'
						id='businessName'
						name='businessName'
						placeholder='My Business.'
						required
					>
				</div>
				<div class='form-group col-md-6'>
					<label for='businessAddress1'>Business Address</label>
					<input
						type='text'
						class='form-control'
						id='businessAddress1'
						name='businessAddress1'
						placeholder='1234 Main St'
						required
					>
				</div>
				<div class='form-group col-md-6'>
					<label for='businessAddress2'>Business Address 2</label>
					<input
						type='text'
						class='form-control'
						id='businessAddress2'
						name='businessAddress2'
						placeholder='Apartment, studio, or floor'
					>
				</div>
				<div class='form-row'>
					<div class='form-group col-md-6'>
						<label for='businessCity'>City</label>
						<input
							type='text'
							class='form-control'
							id='businessCity'
							name='businessCity'
							required
						>
					</div>
					<div class='form-group col-md-4'>
						<label for='businessState'>State</label>
						<select id='businessState' name='businessState' class='form-control'>
							<option selected>Choose...</option>
							<option>Tx</option>
						</select>
					</div>
					<div class='form-group col-md-2'>
						<label for='businessZip'>Zip</label>
						<input type='text' class='form-control' id='businessZip' name='businessZip'>
					</div>
				</div>
			</div>
			{% comment %}--------- {% endcomment %}
			<div style='margin-top: 2em;'>
				<h3 style="font-family: 'DM Sans', sans-serif; letter-spacing: -.02em; margin: 0 0 2.4rem;">
					Licenses and Permits
				</h3>
				<div class='form-group mb-3'>
					<div class='mb-3'>
						<label for='salesAndUseTaxPermitNumber' class='form-label'
							>Texas Sales and Use Tax Permit Number (Must contain 11 digits)</label
						>
						<input
							class='form-control'
							type='text'
							id='salesAndUseTaxPermitNumber'
							name='salesAndUseTaxPermitNumber'
							required
						>
						<div
							id='salesAndUseTaxPermitNumberError'
							class='error'
							style='display: none; color: red;'
						>
							Permit number must contain 11 digits
						</div>
					</div>
				</div>
				<div class='form-group mb-3'>
					<div class='mb-3'>
						<label for='tobaccoPermitNumber' class='form-label'
							>Texas Tobacco Tax Permit Number (required for tobacco!)</label
						>
						<input
							class='form-control'
							type='text'
							id='tobaccoPermitNumber'
							name='tobaccoPermitNumber'
						>
					</div>
				</div>
				<div class='form-group mb-3'>
					<div class='mb-3'>
						<label for='tobaccoPermitExpirationDate' class='form-label'
							>Tobacco Permit Expiration Date</label
						>
						<input
							class='form-control'
							type='date'
							id='tobaccoPermitExpirationDate'
							name='tobaccoPermitExpirationDate'
						>
					</div>
				</div>
				<div class='form-group mb-3'>
					<div class='mb-3'>
						<label for='tobaccoPermitFile' class='form-label'
							>Upload Tobacco Permit Image</label
						>
						<input
							class='form-control'
							type='file'
							id='tobaccoPermitFile'
							name='tobaccoPermitFile'
                            
						>
						<div id='fileError' class='error' style='display: none; color: red;'></div>
					</div>
				</div>
			</div>
			<button type='submit' class='btn btn-primary'>Submit</button>
		</form>
	</div>
</div>
<script src='{{ 'load_form.js' | asset_url}}' async></script>
